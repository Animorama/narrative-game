enterApartment:
  set_screen default 0 slide-top 2000
  stop music
  "You enter your apartment."
  set data.takenShower false
  jump choicesInApartment

choicesInApartment:
  choice:
    talk player idle "What should I do?"
    "Take a shower" if (! $data.takenShower):
      jump takeShower
    KEY "Go to sleep":
      jump goToSleep

takeShower:
  set data.takenShower true 
  "You take a shower"
  jump choicesInApartment

goToSleep:
  "You go to sleep"

